tile-width = 200px
tile-height = tile-width

.board
	display flex
	flex-wrap wrap
	width tile-width * 6
	height tile-height * 6
	margin 0 auto

.tile
	width tile-width
	height tile-height
	position relative
	background #DDD

	path
		stroke #333
		stroke-width 3px

.tile-index
	position absolute;
	top 0
	bottom 0
	right 0
	left 0
	font-size 60px
	line-height 200px
	text-align center

.points li
	display block
	position absolute
	width 10px
	height 10px
	overflow hidden
	text-indent -9999px
	background #eee
	border-radius 5px

	&.point-
		&0-0
			top -5px
			left calc(33.33333% - 5px)
		&0-1
			top -5px
			left calc(66.66666% - 5px)
		&1-0
			right -5px
			top calc(33.33333% - 5px)
		&1-1
			right -5px
			top calc(66.66666% - 5px)
		&2-0
			bottom -5px
			left calc(33.33333% - 5px)
		&2-1
			bottom -5px
			left calc(66.66666% - 5px)
		&3-0
			left -5px
			top calc(33.33333% - 5px)
		&3-1
			left -5px
			top calc(66.66666% - 5px)

.tile-token
	display block
	position absolute
	width 30px
	height 40px
	border-radius 20px
	transition 0.2s
	z-index 2

	&.point-
		&0-0
			top -20px
			left calc(33.33333% - 15px)
		&0-1
			top -20px
			left calc(66.66666% - 15px)
		&1-0
			right -15px
			top calc(33.33333% - 20px)
		&1-1
			right -15px
			top calc(66.66666% - 20px)
		&2-0
			bottom -20px
			left calc(33.33333% - 15px)
		&2-1
			bottom -20px
			left calc(66.66666% - 15px)
		&3-0
			left -15px
			top calc(33.33333% - 20px)
		&3-1
			left -15px
			top calc(66.66666% - 20px)



	&.black-token
		background #333

	&.grey-token
		background #888

	&.brown-token
		background #836d4a

	&.blue-token
		background #38adff

	&.red-token
		background #ff3d38

	&.purple-token
		background #a483e1

	&.green-token
		background #89e183

	&.orange-token
		background orange